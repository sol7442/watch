<?xml version="1.0" encoding="UTF-8"?>
<configuration scan="true" scanPeriod="60 seconds">	
	<property resource="config.properties" />
	
	<appender name="console" class="ch.qos.logback.core.ConsoleAppender">
		<encoder>
			<pattern> %d{HH:mm} %-5level %logger{5} - %msg%n</pattern>
		</encoder>
	</appender>
	
	<appender name="repository" class="ch.qos.logback.core.rolling.RollingFileAppender">
		<file>${logger.home}/repository.log</file>
		<rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
			<fileNamePattern>repository.%d{yyyy-MM-dd}.log</fileNamePattern>
			<maxHistory>14</maxHistory>
			<totalSizeCap>1GB</totalSizeCap>
		</rollingPolicy>
		<encoder>
			<pattern> %d{HH:mm:ss} [%thread] %-5level %logger{36} - %msg%n</pattern>
		</encoder>
	</appender>

	<logger name="org.hibernate.SQL" additivity="false" level="debug">
		<appender-ref ref="repository"/>
	</logger>
	<logger name="org.hibernate.SQL" additivity="false" level="trace">
		<appender-ref ref="repository"/>
	</logger>
	
	<logger name="com.mom.watch" level="debug">
		<appender-ref ref="console"/>		
	</logger>
	<shutdownHook/>
</configuration>